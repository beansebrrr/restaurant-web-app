<li role="link" class="food-card">
  <a href="/menu/<%= menuItem.id %>" tabindex="0"></a>
  <%- include('./food-thumbnail', { food: menuItem, className: "food-card__thumbnail" }) %>
  <h2 class="food-card__name"><%= menuItem.name %></h2>
  <p class="food-card__price">AED <%= menuItem.price.toLocaleString ("en-AE", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
</li>