<div>
  <label for="name">Name</label>
  <input
    type="text"
    name="name"
    value="<%= menuItem.name %>">
</div>

<div>
  <label for="imageName">Image name</label>
  <input
    type="text"
    name="imageName"
    value="<%= menuItem.imageName %>">
</div>

<div>
  <label for="price">Price</label>
  <input
    type="number"
    step="0.01"
    name="price"
    value="<%= menuItem.price %>">
</div>

<div>
  <label for="description"></label>
  <textarea
    name="description" 
    id="description">
    <%= menuItem.description %>
  </textarea>
</div>